@require './config'
@require './code'
@require './custom-blocks'
@require './arrow'
@require './wrapper'
@require './toc'
@require './cards'
@require './tree-view'
@require './color-scheme.styl'

html, body
  padding 0
  margin 0
  background-color:  var(--background-color);
  text-size-adjust: none;
  -webkit-text-size-adjust: none;
  -moz-text-size-adjust: none;
  -ms-text-size-adjust: none;

body
  font-family "Gotham A", "Gotham B", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", 'Noto Sans KR', sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  letter-spacing -0.1px
  color var(--text-color)

.theme-container
  display grid
  width 100%
  grid-template-columns $sidebarWidth 'calc(100% - %s)' % $sidebarWidth
  max-width $layoutWidth
  margin-left auto
  margin-right auto
  position relative
  min-height 100vh

  .page
    padding-top 25px

.navbar
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  height $navbarHeight
  background-color var(--background-color)
  box-sizing border-box

.sidebar
  font-size 0.875rem
  background-color var(--background-color)
  width $sidebarWidth
  position -webkit-sticky
  position sticky
  top 88px
  height calc(100vh - 88px)
  overflow-y auto
  scrollbar-color #eee #fff
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  transform: translateX(100%);

{$contentClass}:not(.custom)
  @extend $wrapper
  > *:first-child
    margin-top $navbarHeight

  a:hover
    text-decoration underline

  p.demo
    padding 1rem 1.5rem
    border 1px solid #ddd
    border-radius 4px

  img
    max-width 100%

{$contentClass}.custom
  padding 0
  margin 0

  img
    max-width 100%

a
  font-weight 500
  color $accentColor
  text-decoration none

p a code
  font-weight 400
  color $accentColor

kbd
  background #eee
  border solid 0.15rem #ddd
  border-bottom solid 0.25rem #ddd
  border-radius 0.15rem
  padding 0 0.15em

blockquote
  font-size 1rem
  color #999;
  border-left .2rem solid #dfe2e5
  margin 1rem 0
  padding .25rem 0 .25rem 1rem

  & > p
    margin 0

img[src$='#shadow']
  box-shadow: 0px 0.5rem 1rem 0px rgba(0, 0, 0, 0.1);

strong
  font-weight 700

h1, h2, h3, h4, h5, h6
  font-weight 700
  line-height 1.25
  color var(--primary-color)
  letter-spacing -0.6px

  {$contentClass}:not(.custom) > &
    margin-top (0.5rem - $navbarHeight)
    padding-top ($navbarHeight + 1rem)
    margin-bottom 0

    &:first-child
      margin-top -1.5rem
      margin-bottom 1rem

      + p, + pre, + .custom-block
        margin-top 2rem

  &:hover .header-anchor
    opacity: 1

h1
  font-size 2.5rem
  letter-spacing: -.03em;
  + p
    margin-top 0 !important

h2
  font-size 1.5rem
  padding-bottom 1rem
  + p
    margin-top 0 !important

h3
  font-size 1.25rem

h4
  &:before
    content ''
    display inline-block
    width 0.1875rem
    height 1.125rem
    background-color $accentColor
    vertical-align middle
    margin-top -0.125rem
    margin-right 0.375rem

.code
  font-size 1rem
  color $primaryColor
  font-weight 400
  font-style italic
  margin 1.5rem 0
  letter-spacing -0.025rem
  padding 0.125rem 2rem
  line-height 1.4
  word-break break-all
  position relative
  &:before
    content 'code'
    position absolute
    top 0.406rem
    left 0.125rem
    display block
    width 1.25rem
    height 1.25rem
    background $primaryColor
    color #fff
    border-radius 0.625rem
    font-family 'Material Icons'
    font-weight normal
    font-style normal
    font-size 0.875rem
    text-align center
    line-height 1.25rem
    text-transform none
    letter-spacing normal
    word-wrap normal
    white-space nowrap
    direction ltr
    -webkit-font-smoothing antialiased
    text-rendering optimizeLegibility
    -moz-osx-font-smoothing grayscale
    font-feature-settings 'liga'
  b
    font-weight 700
  code
    font-size 1.0625rem !important
    font-weight 400 !important
    font-style normal
    padding 0 !important
    background-color transparent !important
    letter-spacing -0.025rem !important

.indent
  padding-left 2rem
  h4
    margin-top 2rem
    margin-bottom 1rem

a.header-anchor
  font-size 0.85em
  float left
  margin-left -0.87em
  padding-right 0
  margin-top 0.125em
  opacity 0

  &:hover
    text-decoration none

code, kbd, .line-number
  font-family "JetBrainsMono", source-code-pro, Menlo, Monaco, Consolas, "Courier New", monospace

p, ul, ol
  line-height 1.7

hr
  border 0
  border-top 1px solid $borderColor

table
  border-collapse collapse
  margin 1rem 0
  display block
  overflow-x auto
  font-size 0.875rem

tr
  border-top 1px solid #D2D9F0
  &:last-child
    border-bottom 1px solid #D2D9F0

th, td
  border-top 1px solid #D2D9F0
  padding 15px
  &:first-child
    padding-left 30px
    border-left 1px solid #D2D9F0
  &:last-child
    padding-right 30px
    border-right 1px solid #D2D9F0

th
  padding 20px 15px
  text-align left
  color $primaryColor

.theme-container
  &.sidebar-open
    .sidebar-mask
      display: block

  &.no-navbar
    {$contentClass}:not(.custom) > h1, h2, h3, h4, h5, h6
      margin-top 1.5rem
      padding-top 0

    .sidebar
      top 0

.material-icons
  font-family 'Material Icons'
  font-weight normal
  font-style normal
  font-size 24px
  line-height 1
  text-transform none
  letter-spacing normal
  word-wrap normal
  white-space nowrap
  direction ltr
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  -moz-osx-font-smoothing grayscale
  font-feature-settings 'liga'

.material-icons-outlined
  font-family 'Material Icons Outlined'
  font-weight normal
  font-style normal
  font-size 24px
  line-height 1
  text-transform none
  letter-spacing normal
  word-wrap normal
  white-space nowrap
  direction ltr
  -webkit-font-smoothing antialiased
  text-rendering optimizeLegibility
  -moz-osx-font-smoothing grayscale
  font-feature-settings 'liga'

@media (min-width: ($MQMobile + 1px))
  .theme-container
    .sidebar
      transform translateX(0)
  .theme-container.no-sidebar
    .sidebar
      display none

    .page
      padding-left 0

@require 'mobile.styl'